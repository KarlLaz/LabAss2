import java.util.Scanner;

class Game {
  public static void main(String[] args) {
      
    Scanner scan = new Scanner(System.in);

    System.out.println("Welcome to claw machine");
    System.out.println("To start, insert your ATM CARD \nType 1 to confirm card insertion");
    int UserIn = scan.nextInt();
    
    int temp;
    if (UserIn == 1) {
        
        System.out.println("Confirmed.");
        System.out.println("Please put your ATM Pin");
    }
    while (UserIn != 1) {
        
        System.out.println("Wrong input, please try again");
        System.out.println("Press 1 to confirm");
        temp = scan.nextInt();
    
    if (temp == 1) { 
        
        System.out.println("Confirmed.");
        System.out.println("Please put your ATM Pin");
        
    int UserPin = scan.nextInt();
    
        System.out.println("Success!");
        System.out.println("You have 5 chances, Good luck!");
        break;
    }
}
}
}
